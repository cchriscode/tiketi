# Tiketi Production Environment Configuration
# AWS EKS Deployment

# Application Environment
NODE_ENV=production
PORT=3001

# Database (RDS PostgreSQL)
DB_HOST=<RDS-엔드포인트>
# 예: tiketi-db.xxxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=tiketi
DB_USER=tiketi_admin
POSTGRES_DB=tiketi
POSTGRES_USER=tiketi_admin

# Redis/Cache (ElastiCache)
REDIS_HOST=<ElastiCache-엔드포인트>
# 예: tiketi-redis.xxxxxx.clustercfg.apne2.cache.amazonaws.com
REDIS_PORT=6379

# WebSocket CORS
SOCKET_IO_CORS_ORIGIN=https://<your-domain>.com
# 예: https://tiketi.com

# Timezone
TZ=Asia/Seoul

# Frontend URLs (CloudFront + ALB)
REACT_APP_API_URL=https://api.<your-domain>.com
# 예: https://api.tiketi.com
REACT_APP_SOCKET_URL=https://api.<your-domain>.com
# WebSocket도 ALB를 통해 연결

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=tiketi-uploads-prod

# Monitoring (Loki/Grafana)
LOKI_URL=http://loki-service:3100

# Queue Configuration
QUEUE_THRESHOLD=1000
QUEUE_PROCESSOR_INTERVAL=10000

# Google OAuth
GOOGLE_CLIENT_ID=<your-google-client-id>
REACT_APP_GOOGLE_CLIENT_ID=<your-google-client-id>

# Service Ports (Internal)
AUTH_SERVICE_PORT=3002
TICKET_SERVICE_PORT=3001
PAYMENT_SERVICE_PORT=3003
STATS_SERVICE_PORT=3004
