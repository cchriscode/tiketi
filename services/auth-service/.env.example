# Server
PORT=3005
NODE_ENV=development

# Database
# Note: Uses single PostgreSQL database 'tiketi' with 'auth_schema' schema
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tiketi
DB_USER=tiketi_user
DB_PASSWORD=tiketi_password

# JWT
# ⚠️ IMPORTANT: Set JWT_SECRET via environment variable or k8s secret
# JWT_SECRET=  # MUST be provided via environment variable
JWT_EXPIRES_IN=7d

# Internal API
INTERNAL_API_KEY=your-internal-api-key
