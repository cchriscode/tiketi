# Ticket Service Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=tiketi
DB_USER=tiketi_user
DB_PASSWORD=tiketi_pass

# Redis Configuration  
REDIS_HOST=dragonfly-service
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS and WebSocket)
FRONTEND_URL=http://localhost:3000

# Auth Service Configuration (for future integration)
AUTH_SERVICE_URL=http://auth-service:3001

# Optional: AWS S3 (not used in Ticket Service)
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
