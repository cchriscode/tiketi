# Ticket Service Environment Variables

# Server
PORT=3002
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tiketi
DB_USER=tiketi_user
DB_PASSWORD=tiketi_pass

# Redis (for queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Auth Service (for token verification)
AUTH_SERVICE_URL=http://localhost:3001

# WebSocket
SOCKET_IO_PATH=/socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Queue Settings
QUEUE_THRESHOLD=1000
QUEUE_PROCESSOR_INTERVAL=1000
MAX_SEATS_PER_RESERVATION=4
TEMPORARY_RESERVATION_MINUTES=5

# Cache TTL (seconds)
EVENTS_LIST_CACHE_TTL=300
EVENT_DETAIL_CACHE_TTL=60
SEATS_CACHE_TTL=10
